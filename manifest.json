{
  "manifest_version": 2,
  "name": "Zyncco",
  "version": "1.0.0",
  "version_name": "Zync Arsenide",
  "author": "Zyncco <support@zync.co>",
  "homepage_url": "https://zync.co",
  "description": "End-to-end encrypted cloud clipboard synchronization.",
  "icons": {},
  "browser_action": {
    "default_title": "Zyncco",
    "default_popup": "/popup/index.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "zync.js"
    ]
  },
  "permissions": [
    "background",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": [
        "other.js"
      ]
    }
  ],
  "optional_permissions": []
}
