{
	"manifest_version": 2,

	"name": "Zync",
	"version": "1.0.0",

	"description": "End-to-End encrypted cloud clipboard synchronisation.",
	"icons": {
		"16": "/assets/icon/16x.png",
		"24": "/assets/icon/24x.png",
		"32": "/assets/icon/32x.png",
		"48": "/assets/icon/48x.png",
		"128": "/assets/icon/128x.png"
	},

	"content_security_policy": "script-src 'self' https://www.gstatic.com; object-src 'self'",

	"browser_action":
	{
		"default_title": "Zync",
		"default_popup": "popup-ui/signin.html"
	},

	"background": {
		"page": "background/index.html"
	},

	"permissions": [
		"alarms",
		"background",
		"clipboardRead",
		"clipboardWrite",
		"contextMenus",
		"storage"
	]
}
